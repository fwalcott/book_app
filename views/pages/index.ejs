<!DOCTYPE html>
<html lang="en">

<%- include('../layout/head') %>

<body>
    <header>Welcome to Book App!</header>
    <nav>
        <ul>
          <li>
            <a href="/searches/new">Search Books</a>
          </li>
        </ul>
      </nav>
    <main>
        <section id="container">
            <ul>
                <% results.forEach(book => { %>
                <li>
                    <img src=<%= book.image_url %>>
                    <h2><%= book.title %></h2>
                    <h3><%= book.author %></h3>
                    <button>
                        <a href="/books/<%= book.id %>">View Details</a>
                    </button>
                    <!-- <p><%= book.description %></p>
            <p>ISBN: <%= book.isbn %></p> -->
                    <% }) %>
                </li>
            </ul>
        </section>
        <p id="totalBooks">Total Books: <%= results.length %></p>
    </main>
</body>

</html>